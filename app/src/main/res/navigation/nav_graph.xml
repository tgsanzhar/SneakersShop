<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authorization"
    >

    <fragment
        android:id="@+id/authorization"
        android:name="com.example.sneakersshop.Authorization.AuthorizationFragment"
        >
        <action
            android:id="@+id/action_authorization_to_store"
            app:destination="@+id/catalog"
        />
        <action
            android:id="@+id/action_authorization_to_login"
            app:destination="@+id/login"
        />
    </fragment>

    <fragment
        android:id="@+id/catalog"
        android:name="com.example.sneakersshop.Catalog.CatalogFragment">

    </fragment>

    <fragment
        android:id="@+id/login"
        android:name="com.example.sneakersshop.Login.LoginFragment">
        <action
            android:id="@+id/action_login_to_authorization"
            app:destination="@+id/authorization"
        />
        <action
            android:id="@+id/action_login_to_store"
            app:destination="@+id/catalog"
        />
    </fragment>
</navigation>